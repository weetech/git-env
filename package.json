{
  "name": "git-env",
  "version": "0.0.1",
  "description": "The project is a library designed to facilitate the retrieval and parsing of environment variables from various hosting platforms. It provides functions to extract environment variables from environment files stored on GitLab, GitHub, and Bitbucket.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "start": "tsc && env-cmd -f .env node --max-old-space-size=8192 dist/index.js",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/nodemailer": "6.4.1",
    "env-cmd": "10.1.0",
    "eslint": "5.14.1",
    "nodemon": "2.0.7",
    "npx": "10.2.0",
    "ts-node": "8.9.1",
    "tslint": "6.1.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "octokit": "^2.1.0",
    "yaml": "^2.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weetech/git-env.git"
  },
  "bugs": {
    "url": "https://github.com/weetech/git-env/issues"
  },
  "homepage": "https://github.com/weetech/git-env#readme",
  "author": "WeeTech Solution PVT LTD",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ]
}
